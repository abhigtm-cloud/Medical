<% layout("layouts/boilerplate") %>

<div class="row mt-3 justify-content-center">
    <div class="col-6 offset-2">
        <h1>LOG IN</h1>
        <form action="/login" method="post" novalidate class="needs-validation">
            <div class="my-3">
                <label for="username" class="form-label" id="username" >Enter username </label>
                <input type="text" name="username" placeholder="Enter your username" class="form-control" required>
            </div>
            <div class="valid-feedback">Looks good!</div>
       
<div class="my-3">
                <label for="password" class="form-label" id="password">Enter password </label>
                <input type="password" name="password" placeholder="Enter your password" class="form-control" required>
           
        
</div>
<button type="submit" class="btn btn-primary">Log In</button>  
        </form>
    </div>
</div>